    <script>
        // DOM Elements
        const landingPageEl = document.getElementById('landingPage');
        const dashboardEl = document.getElementById('dashboard');
        const destinationsPageEl = document.getElementById('destinationsPage');
        const checkoutPageEl = document.getElementById('checkoutPage');
        const contactPageEl = document.getElementById('contactPage');
        const allPackagesPageEl = document.getElementById('allPackagesPage');
        const userMenuEl = document.getElementById('userMenu');
        const userNameEl = document.getElementById('userName');
        const dashboardUserNameEl = document.getElementById('dashboardUserName');
        const logoutBtn = document.getElementById('logoutBtn');
        const messageEl = document.getElementById('message');
        const contactMessageEl = document.getElementById('contactMessage');
        const navLinks = document.querySelectorAll('.nav-link');
        const viewAllLinks = document.querySelectorAll('.view-all');
        const footerNavLinks = document.querySelectorAll('.footer-nav-link');
        
        // Data pagination variables
        let currentPackagePage = 1;
        const packagesPerPage = 12;

        // Current booking state
        let currentBooking = null;

        // Initialize the application
        document.addEventListener('DOMContentLoaded', () => {
            const currentUser = JSON.parse(localStorage.getItem('travelEaseCurrentUser'));
            if (currentUser) {
                showDashboard(currentUser);
                initializeDashboard();
            } else {
                showLandingPage();
            }
            
            // Set default dates for search
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);
            
            document.getElementById('searchCheckIn').valueAsDate = today;
            document.getElementById('searchCheckOut').valueAsDate = tomorrow;
            
            // Setup authentication forms
            setupAuthForms();
            
            // Initialize contact page map
            initMap();
        });

        // Initialize Dashboard
        function initializeDashboard() {
            populateHotels();
            populateFlights();
            populatePackages();
            setupFilters();
            setupSearch();
            setupBookingButtons();
        }

        // Setup Authentication Forms
        function setupAuthForms() {
            const showSignupLink = document.getElementById('show-signup');
            const showSigninLink = document.getElementById('show-signin');
            const toggleSigninPassword = document.getElementById('toggleSigninPassword');
            const toggleSignupPassword = document.getElementById('toggleSignupPassword');
            const signinForm = document.getElementById('signinForm');
            const signupForm = document.getElementById('signupForm');
            const signinFormEl = document.getElementById('signin-form');
            const signupFormEl = document.getElementById('signup-form');

            // Toggle between Sign In and Sign Up forms
            showSignupLink.addEventListener('click', (e) => {
                e.preventDefault();
                signinFormEl.classList.add('hidden');
                signupFormEl.classList.remove('hidden');
                clearMessage();
            });

            showSigninLink.addEventListener('click', (e) => {
                e.preventDefault();
                signupFormEl.classList.add('hidden');
                signinFormEl.classList.remove('hidden');
                clearMessage();
            });

            // Toggle password visibility
            toggleSigninPassword.addEventListener('click', () => {
                const passwordInput = document.getElementById('signin-password');
                const icon = toggleSigninPassword.querySelector('i');
                
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    passwordInput.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });

            toggleSignupPassword.addEventListener('click', () => {
                const passwordInput = document.getElementById('signup-password');
                const icon = toggleSignupPassword.querySelector('i');
                
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    passwordInput.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });

            // Temporary email domain blacklist
            const tempEmailDomains = [
                'tempmail.com', 'guerrillamail.com', 'mailinator.com', 
                '10minutemail.com', 'throwawaymail.com', 'fakeinbox.com',
                'temp-mail.org', 'sharklasers.com', 'trashmail.com',
                'getairmail.com', 'maildrop.cc', 'yopmail.com',
                'disposablemail.com', 'tempail.com', 'tmpmail.org'
            ];

            function isTemporaryEmail(email) {
                const domain = email.split('@')[1]?.toLowerCase();
                if (!domain) return false;
                
                return tempEmailDomains.some(tempDomain => 
                    domain === tempDomain || domain.endsWith(`.${tempDomain}`)
                );
            }

            // Sign In Form Submission
            signinForm.addEventListener('submit', (e) => {
                e.preventDefault();
                
                const email = document.getElementById('signin-email').value;
                const password = document.getElementById('signin-password').value;
                
                if (!email || !password) {
                    showMessage('Please fill in all fields', 'error');
                    return;
                }
                
                if (isTemporaryEmail(email)) {
                    showMessage('Temporary email addresses are not allowed. Please use a permanent email.', 'error');
                    return;
                }
                
                const users = JSON.parse(localStorage.getItem('travelEaseUsers')) || [];
                const user = users.find(u => u.email === email && u.password === password);
                
                if (user) {
                    showMessage(`Welcome back, ${user.name}!`, 'success');
                    localStorage.setItem('travelEaseCurrentUser', JSON.stringify(user));
                    showDashboard(user);
                    initializeDashboard();
                } else {
                    showMessage('Invalid email or password. Please try again.', 'error');
                }
                
                signinForm.reset();
            });

            // Sign Up Form Submission
            signupForm.addEventListener('submit', (e) => {
                e.preventDefault();
                
                const name = document.getElementById('signup-name').value;
                const email = document.getElementById('signup-email').value;
                const phone = document.getElementById('signup-phone').value;
                const password = document.getElementById('signup-password').value;
                const confirmPassword = document.getElementById('signup-confirm-password').value;
                
                if (!name || !email || !phone || !password || !confirmPassword) {
                    showMessage('Please fill in all fields', 'error');
                    return;
                }
                
                if (isTemporaryEmail(email)) {
                    showMessage('Temporary email addresses are not allowed. Please use a permanent email.', 'error');
                    return;
                }
                
                if (password !== confirmPassword) {
                    showMessage('Passwords do not match', 'error');
                    return;
                }
                
                if (password.length < 6) {
                    showMessage('Password must be at least 6 characters long', 'error');
                    return;
                }
                
                const users = JSON.parse(localStorage.getItem('travelEaseUsers')) || [];
                const userExists = users.find(u => u.email === email);
                
                if (userExists) {
                    showMessage('User with this email already exists', 'error');
                    return;
                }
                
                const newUser = {
                    id: Date.now(),
                    name,
                    email,
                    phone,
                    password
                };
                
                users.push(newUser);
                localStorage.setItem('travelEaseUsers', JSON.stringify(users));
                localStorage.setItem('travelEaseCurrentUser', JSON.stringify(newUser));
                
                showMessage(`Account created successfully! Welcome ${name}.`, 'success');
                signupForm.reset();
                
                setTimeout(() => {
                    showDashboard(newUser);
                    initializeDashboard();
                }, 1500);
            });
        }

        // Navigation Functions
        function showPage(pageId) {
            const pages = [landingPageEl, dashboardEl, destinationsPageEl, checkoutPageEl, contactPageEl, allPackagesPageEl];
            pages.forEach(page => page.style.display = 'none');
            
            document.getElementById(pageId).style.display = 'block';
            
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('data-section') === pageId.replace('Page', '').toLowerCase()) {
                    link.classList.add('active');
                }
            });
        }

        function showDashboard(user) {
            showPage('dashboard');
            userMenuEl.classList.remove('hidden');
            userNameEl.textContent = user.name;
            dashboardUserNameEl.textContent = user.name;
        }

        function showLandingPage() {
            showPage('landingPage');
            userMenuEl.classList.add('hidden');
        }

        // Populate Hotels
        function populateHotels() {
            const hotelsGrid = document.getElementById('hotelsGrid');
            hotelsGrid.innerHTML = '';
            
            hotelsData.slice(0, 8).forEach(hotel => {
                hotelsGrid.innerHTML += createHotelCard(hotel);
            });
        }

        function createHotelCard(hotel) {
            return `
                <div class="card" data-type="${hotel.type}">
                    <div class="card-img">
                        <img src="${hotel.image}" alt="${hotel.name}">
                    </div>
                    <div class="card-content">
                        <div class="card-header">
                            <div>
                                <h3 class="card-title">${hotel.name}</h3>
                                <p class="card-location"><i class="fas fa-map-marker-alt"></i> ${hotel.location}</p>
                            </div>
                            <div class="card-rating">
                                <i class="fas fa-star"></i> ${hotel.rating}
                            </div>
                        </div>
                        <p class="card-details">${hotel.description}</p>
                        <div class="card-footer">
                            <div class="price">$${hotel.price}<span> / night</span></div>
                            <button class="btn-book" data-type="hotel" data-id="${hotel.id}">Book Now</button>
                        </div>
                    </div>
                </div>
            `;
        }

        // Populate Flights
        function populateFlights() {
            const flightsGrid = document.getElementById('flightsGrid');
            flightsGrid.innerHTML = '';
            
            flightsData.slice(0, 8).forEach(flight => {
                flightsGrid.innerHTML += createFlightCard(flight);
            });
        }

        function createFlightCard(flight) {
            return `
                <div class="card" data-type="${flight.type}" data-class="${flight.class.toLowerCase()}">
                    <div class="card-content">
                        <div class="card-header">
                            <div>
                                <h3 class="card-title">${flight.airline}</h3>
                                <p class="card-location"><i class="fas fa-plane-departure"></i> ${flight.departure}  ${flight.arrival}</p>
                            </div>
                            <div class="card-rating">
                                <i class="fas fa-clock"></i> ${flight.duration}
                            </div>
                        </div>
                        <p class="card-details">${flight.stops}  ${flight.class} Class  Date: ${flight.date}</p>
                        <div class="card-footer">
                            <div class="price">$${flight.price}<span> / person</span></div>
                            <button class="btn-book" data-type="flight" data-id="${flight.id}">Book Flight</button>
                        </div>
                    </div>
                </div>
            `;
        }

        // Populate Packages
        function populatePackages() {
            const packagesGrid = document.getElementById('packagesGrid');
            packagesGrid.innerHTML = '';
            
            allPackagesData.slice(0, 8).forEach(pkg => {
                packagesGrid.innerHTML += createPackageCard(pkg);
            });
        }

        function createPackageCard(pkg) {
            return `
                <div class="card" data-type="${pkg.type}">
                    <div class="card-img">
                        <img src="${pkg.image}" alt="${pkg.name}">
                    </div>
                    <div class="card-content">
                        <div class="card-header">
                            <div>
                                <h3 class="card-title">${pkg.name}</h3>
                                <p class="card-location"><i class="fas fa-map-marker-alt"></i> ${pkg.location}</p>
                            </div>
                            <div class="card-rating">
                                <i class="fas fa-star"></i> ${pkg.rating}
                            </div>
                        </div>
                        <p class="card-details">${pkg.description}</p>
                        <div class="card-footer">
                            <div class="price">$${pkg.price}<span> / ${pkg.duration}</span></div>
                            <button class="btn-book" data-type="package" data-id="${pkg.id}">Book Package</button>
                        </div>
                    </div>
                </div>
            `;
        }

        // Setup Filters
        function setupFilters() {
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const container = this.closest('.content-section');
                    const filterValue = this.getAttribute('data-filter');
                    const cardType = container.id.includes('hotels') ? 'hotel' : 
                                    container.id.includes('flights') ? 'flight' : 
                                    container.id.includes('packages') ? 'package' : 'destination';
                    
                    this.parentElement.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    
                    filterCards(container, filterValue, cardType);
                });
            });
        }

        function filterCards(container, filterValue, cardType) {
            const cards = container.querySelectorAll('.card');
            cards.forEach(card => {
                if (filterValue === 'all') {
                    card.style.display = 'block';
                } else {
                    const cardFilter = card.getAttribute('data-type');
                    if (cardFilter === filterValue) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                }
            });
        }

        // Setup Search
        function setupSearch() {
            const searchBtn = document.getElementById('searchBtn');
            const searchDestination = document.getElementById('searchDestination');
            
            // Create airport suggestions datalist
            const datalist = document.createElement('datalist');
            datalist.id = 'airportSuggestions';
            airports.forEach(airport => {
                const option = document.createElement('option');
                option.value = `${airport.code} - ${airport.name}, ${airport.city}`;
                datalist.appendChild(option);
            });
            searchDestination.parentNode.appendChild(datalist);
            searchDestination.setAttribute('list', 'airportSuggestions');
            
            searchBtn.addEventListener('click', () => {
                const destination = searchDestination.value;
                if (destination) {
                    showMessage(`Searching for accommodations in ${destination}...`, 'success');
                }
            });
        }

        // Setup Booking Buttons
        function setupBookingButtons() {
            document.querySelectorAll('.btn-book').forEach(btn => {
                btn.addEventListener('click', function() {
                    const type = this.getAttribute('data-type');
                    const id = parseInt(this.getAttribute('data-id'));
                    
                    let item;
                    switch(type) {
                        case 'hotel':
                            item = hotelsData.find(h => h.id === id);
                            break;
                        case 'flight':
                            item = flightsData.find(f => f.id === id);
                            break;
                        case 'package':
                            item = allPackagesData.find(p => p.id === id);
                            break;
                    }
                    
                    if (item) {
                        startBookingProcess(item, type);
                    }
                });
            });
        }

        // Start Booking Process
        function startBookingProcess(item, type) {
            currentBooking = {
                type: type,
                item: item,
                travelers: 2,
                nights: type === 'hotel' ? 3 : 0,
                subtotal: type === 'hotel' ? item.price * 3 : item.price,
                taxes: 0,
                service: 0,
                total: 0
            };
            
            // Calculate fees
            currentBooking.taxes = currentBooking.subtotal * 0.12;
            currentBooking.service = type === 'hotel' ? 25 : 15;
            currentBooking.total = currentBooking.subtotal + currentBooking.taxes + currentBooking.service;
            
            showCheckoutPage();
            updateCheckoutSummary();
        }

        // Show Checkout Page
        function showCheckoutPage() {
            showPage('checkoutPage');
            
            // Setup checkout form
            const confirmPaymentBtn = document.getElementById('confirmPayment');
            confirmPaymentBtn.addEventListener('click', processPayment);
            
            // Setup card formatting
            document.getElementById('cardNumber').addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                value = value.replace(/(\d{4})/g, '$1 ').trim();
                e.target.value = value.substring(0, 19);
            });
            
            document.getElementById('cardExpiry').addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length >= 2) {
                    value = value.substring(0, 2) + '/' + value.substring(2, 4);
                }
                e.target.value = value.substring(0, 5);
            });
            
            document.getElementById('cardCVC').addEventListener('input', function(e) {
                e.target.value = e.target.value.replace(/\D/g, '').substring(0, 3);
            });
        }

        // Update Checkout Summary
        function updateCheckoutSummary() {
            const bookingItemsEl = document.getElementById('bookingItems');
            let itemHTML = '';
            
            if (currentBooking.type === 'hotel') {
                itemHTML = `
                    <div class="booking-item">
                        <div class="booking-item-img">
                            <img src="${currentBooking.item.image}" alt="${currentBooking.item.name}">
                        </div>
                        <div class="booking-item-details">
                            <h4>${currentBooking.item.name}</h4>
                            <p><i class="fas fa-map-marker-alt"></i> ${currentBooking.item.location}</p>
                            <p><i class="fas fa-user-friends"></i> ${currentBooking.travelers} Travelers</p>
                            <p><i class="fas fa-moon"></i> ${currentBooking.nights} Nights</p>
                        </div>
                    </div>
                `;
            } else if (currentBooking.type === 'flight') {
                itemHTML = `
                    <div class="booking-item">
                        <div class="booking-item-details">
                            <h4>${currentBooking.item.airline}</h4>
                            <p><i class="fas fa-plane-departure"></i> ${currentBooking.item.departure}  ${currentBooking.item.arrival}</p>
                            <p><i class="fas fa-clock"></i> ${currentBooking.item.duration}  ${currentBooking.item.stops}</p>
                            <p><i class="fas fa-user-friends"></i> ${currentBooking.travelers} Traveler(s)</p>
                            <p><i class="fas fa-calendar"></i> Date: ${currentBooking.item.date}</p>
                        </div>
                    </div>
                `;
            } else if (currentBooking.type === 'package') {
                itemHTML = `
                    <div class="booking-item">
                        <div class="booking-item-img">
                            <img src="${currentBooking.item.image}" alt="${currentBooking.item.name}">
                        </div>
                        <div class="booking-item-details">
                            <h4>${currentBooking.item.name}</h4>
                            <p><i class="fas fa-map-marker-alt"></i> ${currentBooking.item.location}</p>
                            <p><i class="fas fa-user-friends"></i> ${currentBooking.travelers} Travelers</p>
                            <p><i class="fas fa-calendar"></i> ${currentBooking.item.duration}</p>
                        </div>
                    </div>
                `;
            }
            
            bookingItemsEl.innerHTML = itemHTML;
            
            // Update prices
            document.getElementById('subtotal').textContent = `$${currentBooking.subtotal.toFixed(2)}`;
            document.getElementById('taxes').textContent = `$${currentBooking.taxes.toFixed(2)}`;
            document.getElementById('service').textContent = `$${currentBooking.service.toFixed(2)}`;
            document.getElementById('total').textContent = `$${currentBooking.total.toFixed(2)}`;
        }

        // Process Payment
        function processPayment() {
            const cardName = document.getElementById('cardName').value;
            const cardNumber = document.getElementById('cardNumber').value;
            const cardExpiry = document.getElementById('cardExpiry').value;
            const cardCVC = document.getElementById('cardCVC').value;
            const billingAddress = document.getElementById('billingAddress').value;
            const emailConfirmation = document.getElementById('emailConfirmation').value;
            const terms = document.getElementById('terms').checked;
            
            if (!cardName || !cardNumber || !cardExpiry || !cardCVC || !billingAddress || !emailConfirmation) {
                showMessage('Please fill in all payment details', 'error');
                return;
            }
            
            if (!terms) {
                showMessage('Please agree to the Terms & Conditions', 'error');
                return;
            }
            
            // Validate card number (basic Luhn check)
            const cleanCardNumber = cardNumber.replace(/\D/g, '');
            if (cleanCardNumber.length < 16) {
                showMessage('Please enter a valid 16-digit card number', 'error');
                return;
            }
            
            // Validate expiry date
            const [month, year] = cardExpiry.split('/');
            if (!month || !year || month < 1 || month > 12 || year.length !== 2) {
                showMessage('Please enter a valid expiry date (MM/YY)', 'error');
                return;
            }
            
            // Show processing message
            showMessage('Processing secure payment...', 'success');
            
            // Simulate payment processing
            setTimeout(() => {
                const bookingId = Math.floor(100000 + Math.random() * 900000);
                showMessage(`Payment successful! Booking ID: #${bookingId}. Confirmation sent to ${emailConfirmation}`, 'success');
                
                // Clear form
                document.getElementById('cardName').value = '';
                document.getElementById('cardNumber').value = '';
                document.getElementById('cardExpiry').value = '';
                document.getElementById('cardCVC').value = '';
                document.getElementById('billingAddress').value = '';
                document.getElementById('emailConfirmation').value = '';
                document.getElementById('terms').checked = false;
                
                // Return to dashboard after 3 seconds
                setTimeout(() => {
                    const currentUser = JSON.parse(localStorage.getItem('travelEaseCurrentUser'));
                    showDashboard(currentUser);
                }, 3000);
            }, 2000);
        }

        // Setup Navigation
        navLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const currentUser = JSON.parse(localStorage.getItem('travelEaseCurrentUser'));
                
                if (!currentUser) {
                    showMessage('Please sign in to access this section', 'error');
                    return;
                }
                
                const section = link.getAttribute('data-section');
                
                switch(section) {
                    case 'home':
                        showDashboard(currentUser);
                        break;
                    case 'destinations':
                        showPage('destinationsPage');
                        populateDestinations();
                        break;
                    case 'packages':
                        showPage('allPackagesPage');
                        populateAllPackages();
                        break;
                    case 'contact':
                        showPage('contactPage');
                        break;
                    default:
                        showDashboard(currentUser);
                        const sectionEl = document.getElementById(`${section}Section`);
                        if (sectionEl) {
                            sectionEl.scrollIntoView({ behavior: 'smooth' });
                        }
                }
            });
        });

        // Footer Navigation
        footerNavLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const currentUser = JSON.parse(localStorage.getItem('travelEaseCurrentUser'));
                if (!currentUser) {
                    showMessage('Please sign in to access this section', 'error');
                    return;
                }
                
                const section = link.getAttribute('data-section');
                if (section === 'contact') {
                    showPage('contactPage');
                } else {
                    showDashboard(currentUser);
                }
            });
        });

        // View All Links
        viewAllLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const currentUser = JSON.parse(localStorage.getItem('travelEaseCurrentUser'));
                if (!currentUser) {
                    showMessage('Please sign in to access this section', 'error');
                    return;
                }
                
                const section = link.getAttribute('data-section');
                if (section === 'packages') {
                    showPage('allPackagesPage');
                    populateAllPackages();
                } else {
                    showDashboard(currentUser);
                    const sectionEl = document.getElementById(`${section}Section`);
                    if (sectionEl) {
                        sectionEl.scrollIntoView({ behavior: 'smooth' });
                    }
                }
            });
        });

        // Populate Destinations
        function populateDestinations() {
            const destinationsGrid = document.getElementById('destinationsGrid');
            destinationsGrid.innerHTML = '';
            
            destinationsData.forEach(destination => {
                const card = `
                    <div class="destination-card" data-region="${destination.region}" data-type="${destination.type}">
                        <div class="destination-icon">${destination.icon}</div>
                        <div class="destination-name">${destination.name}</div>
                        <div class="destination-country">${destination.country}</div>
                        <span class="destination-tag">${destination.type}</span>
                    </div>
                `;
                destinationsGrid.innerHTML += card;
            });
        }

        // Populate All Packages with Pagination
        function populateAllPackages(page = 1) {
            currentPackagePage = page;
            const allPackagesGrid = document.getElementById('allPackagesGrid');
            allPackagesGrid.innerHTML = '';
            
            const startIndex = (page - 1) * packagesPerPage;
            const endIndex = startIndex + packagesPerPage;
            const packagesToShow = allPackagesData.slice(startIndex, endIndex);
            
            packagesToShow.forEach(pkg => {
                allPackagesGrid.innerHTML += createPackageCard(pkg);
            });
            
            setupBookingButtons();
            setupPackagePagination();
            setupPackageSearch();
        }

        function setupPackagePagination() {
            const totalPages = Math.ceil(allPackagesData.length / packagesPerPage);
            const paginationEl = document.getElementById('packagesPagination');
            paginationEl.innerHTML = '';
            
            if (currentPackagePage > 1) {
                paginationEl.innerHTML += `
                    <button class="page-btn" onclick="window.populateAllPackages(${currentPackagePage - 1})">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                `;
            }
            
            for (let i = 1; i <= totalPages; i++) {
                if (i === currentPackagePage) {
                    paginationEl.innerHTML += `<button class="page-btn active">${i}</button>`;
                } else {
                    paginationEl.innerHTML += `<button class="page-btn" onclick="window.populateAllPackages(${i})">${i}</button>`;
                }
            }
            
            if (currentPackagePage < totalPages) {
                paginationEl.innerHTML += `
                    <button class="page-btn" onclick="window.populateAllPackages(${currentPackagePage + 1})">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                `;
            }
        }

        function setupPackageSearch() {
            const searchInput = document.getElementById('packagesSearch');
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const cards = document.querySelectorAll('#allPackagesGrid .card');
                
                cards.forEach(card => {
                    const title = card.querySelector('.card-title').textContent.toLowerCase();
                    const location = card.querySelector('.card-location').textContent.toLowerCase();
                    const description = card.querySelector('.card-details').textContent.toLowerCase();
                    
                    if (title.includes(searchTerm) || location.includes(searchTerm) || description.includes(searchTerm)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        }

        // Initialize Contact Page Map
        function initMap() {
            // Check if map container exists
            const mapContainer = document.getElementById('map');
            if (!mapContainer) return;
            
            // Create map centered on New York
            const map = L.map('map').setView([40.7128, -74.0060], 13);
            
            // Add tile layer
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: ' OpenStreetMap contributors'
            }).addTo(map);
            
            // Add marker
            L.marker([40.7128, -74.0060])
                .addTo(map)
                .bindPopup('<b>TravelEase Headquarters</b><br>123 Travel Street, New York')
                .openPopup();
        }

        // Contact Form
        document.getElementById('contactForm')?.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const name = document.getElementById('contactName').value;
            const email = document.getElementById('contactEmail').value;
            const subject = document.getElementById('contactSubject').value;
            const message = document.getElementById('contactMessageText').value;
            
            if (!name || !email || !subject || !message) {
                showMessage('Please fill in all fields', 'error', contactMessageEl);
                return;
            }
            
            showMessage('Sending your message...', 'success', contactMessageEl);
            
            setTimeout(() => {
                showMessage(`Thank you, ${name}! Your message has been sent successfully. We'll respond within 24 hours.`, 'success', contactMessageEl);
                this.reset();
            }, 1500);
        });

        // Newsletter Form
        document.getElementById('newsletterForm')?.addEventListener('submit', function(e) {
            e.preventDefault();
            const emailInput = this.querySelector('input[type="email"]');
            const email = emailInput.value;
            
            if (!email) {
                alert('Please enter your email address');
                return;
            }
            
            alert('Thank you for subscribing to our newsletter!');
            emailInput.value = '';
        });

        // Show Message
        function showMessage(text, type, element = messageEl) {
            element.textContent = text;
            element.className = `message ${type}`;
            element.classList.remove('hidden');
            
            setTimeout(() => {
                element.classList.add('hidden');
            }, 3000);
        }

        function clearMessage() {
            messageEl.classList.add('hidden');
        }

        // Logout
        logoutBtn.addEventListener('click', () => {
            localStorage.removeItem('travelEaseCurrentUser');
            showLandingPage();
            showMessage('You have been logged out successfully.', 'success');
        });

        // Make functions available globally
        window.populateAllPackages = populateAllPackages;
    </script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
</body>
</html>
